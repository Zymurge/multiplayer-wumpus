{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"strict": true,
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"baseUrl": ".",
		"allowImportingTsExtensions": true,
		"paths": {
			"@client/*": ["src/client/*"],
			"@shared/*": ["src/shared/*"],
			"@routes/*": ["src/routes/*"]
		}
	},
	"include": [
		"src/client/**/*.ts",
		"src/shared/**/*.ts",
		"src/routes/**/*.ts",
		"src/**/*.svelte",
		"src/**/*.d.ts"
, "src/server/ws/server.ts"	],
	"exclude": [
		"node_modules",
		"build",
		"dist",
		"public"
	],
	"files": []
}
