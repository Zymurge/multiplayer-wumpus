{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist/server",
    "rootDir": "src",
    "lib": ["ES2022"]
  },
  "include": ["src/server/**/*.ts", "src/lib/game/**/*.ts", "src/lib/grid/**/*.ts"],
  "exclude": ["**/*.test.ts"]
}
