{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "..",
    "outDir": "../dist",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@server/*": ["./server/*"]
    }
  },
  "include": [
    "../shared/**/*.ts",
    "../server/**/*.ts"
  ],
  "exclude": [
    "../client",
    "../routes"
  ]
  /*
  ,
    "ts-node": {
      "esm": true
  }
  */
}
