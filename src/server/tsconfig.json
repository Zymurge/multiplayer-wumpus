{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "..",
    "outDir": "dist",
    "paths": {
      "$lib/*": ["lib/*"]
    }
  },
  "include": [
    "server.ts"
  ],
  "exclude": [
    "dist"
  ]
}
